{{#illiquid-model model as |day|}}
  {{#memory-scroll key=(concat "day" day.id) class="memory-scroll" }}

    {{the-logo}}

    <section class="day">
        <div class="row" id={{day.id}}>
          <div class="small-12 columns">
            <h2 class="centered">{{day.name}}</h2>
          </div>
        </div>
        <ol class="row" onclick={{action "chooseTalk"}} >
          {{#each day.talks as |talk|}}
            <li class='small-12 columns accordion' data-talk-id={{talk.id}}>
              <div class="row small-collapse medium-uncollapse">
                  <div class="event-time small-12 medium-4 columns">
                    <p>{{talk.time}}</p>
                  </div>
                <div class="event-info small-12 medium-8 columns">
                  {{#if talk.imageUrl}}
                    <div class="img">
                      <img src="{{talk.imageUrl}}" alt={{talk.title}} class="round" width=46 height=46 data-photo-id={{talk.id}}>
                    </div>
                  {{/if}}
                  <h3>{{talk.title}}</h3>
                  {{#if talk.speakers.length}}
                    <p>{{array-join talk.speakers ', '}}</p>
                  {{/if}}
                  {{is-interested-button talkId=talk.id}}
                </div>
              </div>
            </li>
          {{/each}}
        </ol>

    </section>
  {{/memory-scroll}}
{{/illiquid-model}}
