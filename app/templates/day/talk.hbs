{{#with model as |talk|}}
<section class="day talk">

  <span class='icon close' {{action 'goBack'}}>X</span>

  {{#if talk.imageUrl}}
    <img src="{{talk.imageUrl}}" alt={{talk.title}} class="round" data-photo-id={{talk.id}}>
  {{/if}}
  <h3>{{talk.title}}</h3>

    <div class="speakers">{{array-join talk.speakers ', '}}</div>
    <div>{{talk.time}}</div>
    {{is-interested-button talkId=talk.id}}

  <div>
    {{{talk.description}}}
  </div>
</section>
{{/with}}
